{
    "name": "glsp",
    "displayName": "GameLisp",
    "version": "0.2.0",
    "publisher": "fleabit",
    "engines": {
        "vscode": "^1.0.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "glsp",
                "extensions": [".glsp"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "glsp",
                "scopeName": "source.glsp",
                "path": "./syntaxes/GameLisp.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "[glsp]": {
                "editor.tabSize": 2,
                "editor.matchBrackets": "always"
            }
        }
    }
}
